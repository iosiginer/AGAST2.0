<Window x:Class="AGAST2.GameUI.TriviaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Left="10" Top="20"
        Title="TriviaWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="479*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="backg.jpg"/>
        </Grid.Background>
        <Label x:Name="Question" Height="72"  VerticalAlignment="Top"  Margin="242,76,226.667,0"  FontSize="12" HorizontalAlignment="Center" Content="{Binding QuestionAsString}" Grid.RowSpan="2" />
        <Button  Click="Back"
            MinWidth="80" Margin="0,384,372.667,-0.333" Content="Back" Background="LightBlue" FontFamily="Verdana"  FontSize="12" BorderBrush="DarkBlue" Grid.RowSpan="2" />
        <Label x:Name="score" Height="39"  VerticalAlignment="Top"  Margin="387,17,34.667,0"  FontSize="20" HorizontalAlignment="Center" Content="Label" Grid.RowSpan="2" />
        <ListBox x:Name="Options" HorizontalAlignment="Left" Height="171" Margin="98,178,0,0" VerticalAlignment="Top" Width="271" Grid.RowSpan="2">
        </ListBox>

    </Grid>
</Window>
